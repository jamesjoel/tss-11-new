<%- include('../includes/header') %>
<div class="container my-5" style="min-height: 700px;">
    
    <div class="row">
        <div class="col-md-12">
            <form action="/student/update/<%- stu._id %>" method="post">
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <h2 class="text-center">Update Student</h2>
                    <div class="my-3">
                        <label for="fullname">Full Name</label>
                        <input type="text" value="<%- stu.fullname %>" name="fullname" id="fullname" class="form-control"/>
                    </div>
                    <div class="my-3">
                        <label>Fee</label>
                        <input type="text" value="<%- stu.fee %>" name="fee" class="form-control"/>
                    </div>
                    <div class="my-3">
                        <label>Class</label>
                        <select name="class" class="form-control">
                            <option>Select Class</option>
                            <% for(var i=1; i<=12; i++){ %>

                                <option <% if(stu.class == i){ %> selected <% } %>><%- i %></option>

                            <% } %>
                        </select>
                    </div>
                    <div class="my-3">
                        <label>Contact Number</label>
                        <input name="contact" value="<%- stu.contact %>" type="text" class="form-control"/>
                    </div>
                    <div class="my-3">
                        <label>Gender</label>
                        <br />
                        <label for="male">Male</label> <input value="male" type="radio" <% if(stu.gender=="male"){ %> checked <% } %> id="male" name="gender"/>
                        <label for="female">Female</label> <input value="female" type="radio" <% if(stu.gender=="female"){ %> checked <% } %>id="female" name="gender"/>
                    </div>
                    <div class="my-3">
                        <label>Address</label>
                        <textarea name="address" class="form-control"><%- stu.address %></textarea>
                    </div>

                    <div class="my-3">
                        <input type="submit" value="Update Student" class="btn btn-primary" />
                    </div>
                </div>
            </div>
            </form>
        </div>
    </div>
</div>
<%- include('../includes/footer') %>