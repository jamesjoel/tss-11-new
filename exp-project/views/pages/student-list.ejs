<%- include('../includes/header') %>
<div class="container my-5" style="min-height: 700px;">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <h4 class="text-center">List of All Student</h4>
            <% if(stu.length > 0){ %>
            <table class="table table-dark table-hover table-striped table-bordered">
                <tr>
                    <th>S.No.</th>
                    <th>Name</th>
                    <th>Fee</th>
                    <th>Contact</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
                <% stu.forEach((value, index)=>{ %>
                    <tr>
                        <td><%- index+1 %></td>
                        <td><%- value.fullname %></td>
                        <td><%- value.fee %></td>
                        <td><%- value.contact %></td>
                        <td><a href="/student/edit/<%- value._id %>" class="btn btn-info btn-sm">Edit</a></td>
                        <td><a href="/student/delete/<%- value._id %>" class="btn btn-danger btn-sm">Delete</a></td>
                    </tr>
                <% }) %>
            </table>
            <% }else{ %>
                <div class="alert alert-danger">
                    No Record Found !
                </div>
            <% } %>
        </div>
    </div>
</div>
<%- include('../includes/footer') %>