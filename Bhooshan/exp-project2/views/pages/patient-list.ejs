<%- include("../includes/header") %>

<div class="container my-5" style="min-height: 700px;" >
    <div class="row">
        <div class="col-md-10 offset-md-1">
           <h2>Patient list</h2>
           <% if(result.length > 0){ %>
           <table class="table table-primary    ">
            <tr>
                <th>S. nu.</th>
                <th>Name</th>
                <th>Email</th>
                <th>Contact</th>
                <th>gender</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr> 
             <% result.forEach((value, index)=>{ %>
               <tr>
                <td><%- index+1 %></td>
                <td><%- value.fullname %></td>
                <td><%- value.Email %></td>
                <td><%- value.contact %></td>
                <td><%- value.gender %></td>
                <td><a href="/patient/edit/<%- value._id %>" class="btn btn-info btn-sm">edit</a></td>
                <td><a href="/patient/delete/<%- value._id %>" class="btn btn-danger btn-sm">Delete</a></td>
               </tr>
             <% }) %>
           </table>
           <% } else{%>
               <div class="alert alert-danger">
                NO DATA FOUND !
               </div>
            <% } %>
        </div>
    </div>
</div>


<%- include("../includes/footer") %>